<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC
 "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
 "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
<tiles-definitions>
<!--     layout admin -->
	<definition name="layoutAdmin" template="/views/layout/admin/index.jsp">
 		<put-attribute name="header" value="/views/layout/admin/_header.jsp" />
 		<put-attribute name="menu" value="/views/layout/admin/_menu.jsp" />
 		<put-attribute name="body" value="" />
 		<put-attribute name="footer" value="/views/layout/admin/_footer.jsp" />
 	</definition>
 	<definition name="admin/*/*" extends="layoutAdmin">
 		<put-attribute name="body" value="/views/admin/{1}/{2}.jsp" />
 	</definition>
<!--  	layout site -->
 	<definition name="layoutSite" template="/views/layout/site/index.jsp">
 		<put-attribute name="header" value="/views/layout/site/_header.jsp" />
 		<put-attribute name="body" value="" />
 		<put-attribute name="footer" value="/views/layout/site/_footer.jsp" />
 	</definition>
 	<definition name="site/*/*" extends="layoutSite">
 		<put-attribute name="body" value="/views/site/{1}/{2}.jsp" />
 	</definition>
</tiles-definitions>